<% provide(:title, "All Posts") %> 

<div class="container">
  <div class="col-xs-12">
    <h1 class="header-text">All Post</h1>
  </div>

  <div class="row">
    <div class="table-responsive col-md-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created On</th>
            <th>Comments</th>
          </tr>
        </thead>
        <tbody>
          <%= render @articles%>
        </tbody>
      </table>
    </div>
  </div>
</div>