<div id="comment-form">
  <div class="form-area"> 
    <%= form_for [ @article, @comment ] do |f| %>
      <br style="clear:both">
      <h3 style="margin-bottom: 25px; text-align: center;">Post a comment</h3>
      <div class="form-group">
        <%= f.label :author_name, "Your Name:" %>
        <%= f.text_field :author_name, class: "form-control", maxlength: "30", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :body, "Comment:" %>
        <%= f.text_area :body, class: "form-control", id: "comment-text-area", maxlength: "200", rows: "2" %>
        <span class="help-block"><p id="characterLeft" class="help-block ">200 characters max</p></span>                    
      </div>
      <%= f.submit 'Submit', class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>