<h1>All Tags</h1>

<ul id="tags">
  <% @tag.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag.id) %> 
      <% if logged_in? %>
      	<%= link_to "delete", tag_path(tag.id), method: :delete, data: {confirm: "Do you really want to delete this tag?"}  %>
	  <% end %>
    </li>
  <% end %>
</ul>
<br><br>
<%= link_to "<< Back to Articles List", articles_path%>