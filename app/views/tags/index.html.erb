<% provide(:title, "All Tags") %> 

<div class="container">
  <div class="col-xs-12">
    <h1 class="header-text">All Tags</h1>
  </div>

  <div class="row">
    <div class="table-responsive col-md-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Tag Name</th>
            <th>Article Count</th>
          </tr>
        </thead>
        <tbody>
          <%= render @tags %>
        </tbody>
      </table>
    </div>
  </div>
</div>